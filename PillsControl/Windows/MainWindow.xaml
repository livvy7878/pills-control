<Window x:Class="PillsControl.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PillsControl"
        mc:Ignorable="d"
        Title="Pills control" Height="450" Width="800" WindowStartupLocation="CenterScreen">

	<Window.DataContext>
		<StaticResource ResourceKey="MainWindowViewModel"/>
	</Window.DataContext>

	<Window.Resources>
		<Style TargetType="Frame" x:Key="AuthorizationStylePage">
			<Style.Triggers>
				<DataTrigger Binding="{Binding IsAuthorized}" Value ="True">
					<Setter Property="Visibility" Value="Hidden"/>
				</DataTrigger>
			</Style.Triggers>
		</Style>
	</Window.Resources>

	<Grid>
		<Frame Source="LoginPage.xaml" Style="{DynamicResource AuthorizationStylePage}"/>
	</Grid>
</Window>
